{
  "manifest_version": 2,

  "name": "metatrailer for plex",
  "description": "adds movie trailers to plex",
  "version": "1.2",
  "author": "dev@conceptualspace.net",
  "permissions": [
    "https://app.plex.tv/*",
    "http://app.plex.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.plex.tv/*", "http://app.plex.tv/*"],
      "js": ["jquery-3.3.1.min.js", "arrive.min.js", "content_script.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
